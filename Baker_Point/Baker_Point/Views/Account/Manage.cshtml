            }
        });
    }
            function onChange()
            {                
                var file = document.getElementById("upava");
                if (!file.value.match(/.jpg|.png/i)) {
                    alert("file invalid");
                }
                else {
                    var form = document.getElementById("avaform");
                    var scroll = $(window).scrollTop();
                    $("#scroll").val(scroll);
                    form.submit();
                }
            }
        </script>

@section Scripts {
