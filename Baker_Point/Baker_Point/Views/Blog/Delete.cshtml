@model Baker_Point.Models.Blogs

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutBlog.cshtml";
    Baker_Point.Models.BPDbContext db = new Baker_Point.Models.BPDbContext();
    ViewBag.FeaturedBlogs = db.Featured.ToList();
}
    <div class="widewrapper main">
        <div class="container">
            <h3>Are you sure you want to delete this?</h3>
            <div class="row">
                <div class="col-md-8 blog-main">
                    <article class="blog-post">
                        <header>
                           
                            <div class="lead-image">
                                @if(Model.titleImg!=""){
                                <img src="../../@Model.titleImg" alt="" class="img-responsive">
                                }
                            </div>
                        </header>
                        <div class="body">
                            <h1>@Model.BlogTitle</h1>
                            <div class="meta">
                                <i class="fa fa-user"></i> @Model.User.UserName <i class="fa fa-calendar"></i>@Model.PostTime<i class="fa fa-comments"></i><span class="data"><a href="#comments">@Model.Comments Comments</a></span>
                            </div>
                            @Model.Context

                        </div>
                        @using (Html.BeginForm()) {
                                <a href="#" id="submit"><i class="fa">Delete</i></a>
                                <a href="../../Blog/Details/@Model.BlogsId"><i class="fa">Cancel</i></a>
                        }

                    </article>
                </div>
                <aside class="col-md-4 blog-aside">
                    
                    <div class="aside-widget">
                        <header>
                            <h3>Featured Post</h3>
                        </header>
                        <div class="body">
                            <ul class="clean-list">
                                @foreach (Baker_Point.Models.FeaturedList item in ViewBag.FeaturedBlogs)
                                {
                                    <li><a href="../../Blog/Details/@item.BlogsId">@item.blog.BlogTitle</a></li> 
                                }
                            </ul>
                        </div>
                    </div>
                
                    <div class="aside-widget">
                        <header>
                            <h3>Related Post</h3>
                        </header>
                        <div class="body">
                            <ul class="clean-list">
                                <li><a href="">Blackor Responsive Theme</a></li>
                                <li><a href="">Portfolio Bootstrap Template</a></li>
                                <li><a href="">Clean Slider Template</a></li>
                                <li><a href="">Clean - Responsive HTML5 Template</a></li>
                                <li><a href="">Responsive Pricing Table</a></li>
                                <li><a href="">Yellow HTML5 Template</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="aside-widget">
                        <header>
                            <h3>Tags</h3>
                        </header>
                        <div class="body clearfix">
                            <ul class="tags">
                                <li><a href="#">HTML5</a></li>
                                <li><a href="#">CSS3</a></li>
                                <li><a href="#">COMPONENTS</a></li>
                                <li><a href="#">TEMPLATE</a></li>
                                <li><a href="#">PLUGIN</a></li>
                                <li><a href="#">BOOTSTRAP</a></li>
                                <li><a href="#">TUTORIAL</a></li>
                                <li><a href="#">UI/UX</a></li>                            
                            </ul>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>

<script type="text/javascript" src="~/Scripts/js/jquery-1.12.4.min.js"></script>
<script>
    $("form #submit").click(function () {
        $("form").submit();
    })

</script>