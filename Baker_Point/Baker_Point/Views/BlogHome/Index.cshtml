@model IEnumerable<Baker_Point.Models.PushModel>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutBlog.cshtml";
    Baker_Point.Models.BPDbContext db = new Baker_Point.Models.BPDbContext();
    ViewBag.FeaturedBlogs = db.Featured.ToList();
}

    <div class="widewrapper main">
        <div class="container">
            <div class="row">
                <div class="col-md-8 blog-main">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-6 col-sm-6">
                                <article class="blog-teaser">
                                    <header>
                                        @if (item.blog.titleImg == "")
                                        { 
                                            <img style="background-color:lightgray;"/>
                                        }
                                        else
                                        {
                                            <img src="../../@item.blog.titleImg"/>
                                        }
                                        <h3><a href="../../Blog/Details/@item.blog.BlogsId">@item.blog.BlogTitle</a></h3>
                                        <span class="meta">@item.blog.PostTime,@item.blog.User.UserName</span>
                                        <hr />
                                    </header>
                                    <div class="body">
                                        @item.shortcontext
                                    </div>
                                    <div class="clearfix">
                                        <a href="../../Blog/Details/@item.blog.BlogsId" class="btn btn-clean-one">Read more</a>
                                    </div>
                                </article>
                            </div> 
                        }
                    </div>

                    <div class="paging">
                        @Html.ActionLink("Older Post","Index","Blog")
                    </div>
                </div>
                <aside class="col-md-4 blog-aside">
                    
                    <div class="aside-widget">
                        <header>
                            <h3>Featured Post</h3>
                        </header>
                        <div class="body">
                            <ul class="clean-list">
                                @foreach (Baker_Point.Models.FeaturedList item in ViewBag.FeaturedBlogs)
                                {
                                    <li><a href="../../Blog/Details/@item.BlogsId">@item.blog.BlogTitle</a></li> 
                                }
                            </ul>
                        </div>
                    </div>
                
                    <div class="aside-widget">
                        <header>
                            <h3>Related Post</h3>
                        </header>
                        <div class="body">
                            <ul class="clean-list">
                                <li><a href="">Blackor Responsive Theme</a></li>
                                <li><a href="">Portfolio Bootstrap Template</a></li>
                                <li><a href="">Clean Slider Template</a></li>
                                <li><a href="">Clean - Responsive HTML5 Template</a></li>
                                <li><a href="">Responsive Pricing Table</a></li>
                                <li><a href="">Yellow HTML5 Template</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="aside-widget">
                        <header>
                            <h3>Tags</h3>
                        </header>
                        <div class="body clearfix">
                            <ul class="tags">
                                <li><a href="#">HTML5</a></li>
                                <li><a href="#">CSS3</a></li>
                                <li><a href="#">COMPONENTS</a></li>
                                <li><a href="#">TEMPLATE</a></li>
                                <li><a href="#">PLUGIN</a></li>
                                <li><a href="#">BOOTSTRAP</a></li>
                                <li><a href="#">TUTORIAL</a></li>
                                <li><a href="#">UI/UX</a></li>                            
                            </ul>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>

    
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/modernizr.js"></script>